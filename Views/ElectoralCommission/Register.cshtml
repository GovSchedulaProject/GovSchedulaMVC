@model GovSchedulaWeb.Models.ViewModels.VoterRegistrationViewModel
@{
    ViewData["Title"] = "Voter's Identification Card";
}

@section Styles {
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />

    <style>
        .phone-input-container {
            position: relative;
        }

        .phone-prefix {
            position: absolute;
            left: 1px;
            top: 1px;
            bottom: 1px;
            display: flex;
            align-items: center;
            padding: 0 0.75rem;
            background-color: #f3f4f6;
            border-right: 1px solid #d1d5db;
            border-top-left-radius: 0.375rem;
            border-bottom-left-radius: 0.375rem;
            font-size: 1rem;
            color: #4b5563;
        }

        .phone-input-container .formInput {
            padding-left: 5rem; 
        }
    </style>
}

<div class="hero">
    <h1 class="heroTitle">Passport Application</h1>
    <p class="heroSubtitle">Fill in the forms with the exact details on your birth certificate.</p>
    <button type="button" onclick="window.location.href='@Url.Action("Index", "Booking")'" class="backButton">
        <i class="fa-solid fa-arrow-left"></i> Back to Departments
    </button>
</div>

<div class="formSection">
    <form class="formContainer" asp-action="Register" asp-controller="ElectoralCommission" method="post">
        @Html.AntiForgeryToken()
        <div class="formGrid">

            <div>
                <label asp-for="FirstName" class="formLabel"></label>
                <input asp-for="FirstName" class="formInput" />
                </div>
            <div>
                <label asp-for="LastName" class="formLabel"></label>
                <input asp-for="LastName" class="formInput" />
            </div>
            <div>
                <label asp-for="OtherNames" class="formLabel"></label>
                <input asp-for="OtherNames" class="formInput" />
            </div>
            <div>
                <label asp-for="Gender" class="formLabel"></label>
                <select asp-for="Gender" class="formSelect">
                    <option value="">Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>
            <div>
                <label asp-for="DateOfBirth" class="formLabel"></label>
                <div class="dateInputContainer">
                    <input asp-for="DateOfBirth" class="formInput" placeholder="MM/DD/YYYY" type="text" />
                    <i class="fa-regular fa-calendar-alt dateIcon"></i>
                </div>
            </div>
            <div>
                <label asp-for="PlaceOfBirth" class="formLabel"></label>
                <input asp-for="PlaceOfBirth" class="formInput" />
            </div>

            <div>
                <label asp-for="PhoneNumber" class="formLabel"></label>
                <div class="phone-input-container">
                    <span class="phone-prefix">+233</span>
                    <input asp-for="PhoneNumber" class="formInput" placeholder="XX XXX XXXX" />
                </div>
            </div>
            <div>
                <label asp-for="Nationality" class="formLabel"></label>
                <input asp-for="Nationality" class="formInput" placeholder="e.g., Ghanaian" />
            </div>
            <div>
                <label asp-for="PostalAddress" class="formLabel"></label>
                <input asp-for="PostalAddress" class="formInput" placeholder="e.g., Box 123, Accra" />
            </div>
            <div>
                <label asp-for="Occupation" class="formLabel"></label>
                <input asp-for="Occupation" class="formInput" />
            </div>

            <div class="colSpan2">
                <label asp-for="ResidentialAddress" class="formLabel"></label>
                <input asp-for="ResidentialAddress" class="formInput" />
            </div>
            <div class="colSpan2">
                <label asp-for="EmailAddress" class="formLabel"></label>
                <input asp-for="EmailAddress" class="formInput" type="email" placeholder="e.g., user@example.com" />
            </div>
            
            <div class="buttonContainer" style="justify-content: flex-end;">
                <button type="submit" class="formButton submitButton">Next: Review Details</button>
            </div>

        </div> </form>
</div>

@section Scripts {
    @* @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} *@
}