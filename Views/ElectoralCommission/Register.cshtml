@using GovSchedulaWeb.Models.ViewModels
@model VoterRegistrationViewModel
@{
    ViewData["Title"] = "Voter Registration";
}
@section Styles {
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />

    <style>
        .phone-input-container {
            position: relative;
            width: 350px;
        }

        .phone-prefix {
            position: absolute;
            left: 1px;
            top: 1px;
            bottom: 1px;
            display: flex;
            align-items: center;
            padding: 0 0.75rem;
            background-color: #f3f4f6;
            border-right: 1px solid #d1d5db;
            border-top-left-radius: 0.375rem;
            border-bottom-left-radius: 0.375rem;
            font-size: 1rem;
            color: #4b5563;
        }

        .phone-input-container .formInput {
            padding-left: 5rem;
        }
    </style>
}

<div class="hero">
    <h1 class="heroTitle">Passport Application</h1>
    <p class="heroSubtitle">Fill in the forms with the exact details on your birth certificate.</p>
    <button type="button" onclick="window.location.href='@Url.Action("Index", "Booking")'" class="backButton">
        <i class="fa-solid fa-arrow-left"></i> Back to Departments
    </button>
</div>

<div class="formSection">
    <form class="formContainer" asp-action="Register" asp-controller="ElectoralCommission" method="post">
        @Html.AntiForgeryToken()
        <div class="formGrid">
            

            <div>
                <label asp-for="GhanaCard.GhanaCardIdnumber" class="formLabel">GhanaCardNumber</label>
                <input asp-for="GhanaCard.GhanaCardIdnumber" class="formInput" placeholder="GHA-XXXXXXX-X" />
                <span asp-validation-for="GhanaCard.GhanaCardIdnumber" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="GeneralDetail.FirstName" class="formLabel">First Name</label>
                <input asp-for="GeneralDetail.FirstName" class="formInput" />
                <span asp-validation-for="GeneralDetail.FirstName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="GeneralDetail.MiddleName" class="formLabel">Middle Name (Optional)</label>
                <input asp-for="GeneralDetail.MiddleName" class="formInput" />
                <span asp-validation-for="GeneralDetail.MiddleName" class="text-danger"></span>
            </div><div>
                <label asp-for="GeneralDetail.LastName" class="formLabel">Last Name</label>
                <input asp-for="GeneralDetail.LastName" class="formInput" />
                <span asp-validation-for="GeneralDetail.LastName" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="GeneralDetail.Gender" class="formLabel"></label>
                <select asp-for="GeneralDetail.Gender" class="formSelect">
                    <option value="">Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
                <span asp-validation-for="GeneralDetail.Gender" class="text-danger"></span>
            </div>
        <div>
            <label asp-for="GeneralDetail.BirthPlace" class="formLabel">Place Of Birth</label>
            <input asp-for="GeneralDetail.BirthPlace" class="formInput" />
            <span asp-validation-for="GeneralDetail.BirthPlace" class="text-danger"></span>
        </div>

            <div>
                <label asp-for="GeneralDetail.Bdate" class="formLabel">Date Of Birth</label>
                <div class="dateInputContainer">
                    <input asp-for="GeneralDetail.Bdate" class="formInput" placeholder="MM/DD/YYYY" type="date" value="@DateTime.Now"/>
                   
                </div>
                <span asp-validation-for="GeneralDetail.Bdate" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="GeneralDetail.PhoneNumber" class="formLabel">PhoneNumber</label>
                <div class="phone-input-container">
                    <span class="phone-prefix">+233</span>
                    <input asp-for="GeneralDetail.PhoneNumber" class="formInput" placeholder="XX XXX XXXX" />
                </div>
            </div>
            <div>
                <label asp-for="GeneralDetail.Nationality" class="formLabel"></label>
                <input asp-for="GeneralDetail.Nationality" class="formInput" placeholder="e.g., Ghanaian" />
            </div>
            <div>
                <label asp-for="GeneralDetail.PostalAddress" class="formLabel"></label>
                <input asp-for="GeneralDetail.PostalAddress" class="formInput" placeholder="e.g., GA-123-4567" />
                <span asp-validation-for="GeneralDetail.PostalAddress" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="GeneralDetail.Occupation" class="formLabel"></label>
                <input asp-for="GeneralDetail.Occupation" class="formInput" />
            </div>

            <div class="colSpan2">
                <label asp-for="GeneralDetail.ResidentalAddress" class="formLabel">ResidentialAddress</label>
                <textarea asp-for="GeneralDetail.ResidentalAddress" class="formTextarea" rows="2"></textarea>
                <span asp-validation-for="GeneralDetail.ResidentalAddress" class="text-danger"></span>
            </div>
            <div class="colSpan2">
                <label asp-for="GeneralDetail.Email" class="formLabel">EmailAddress</label>
                <input asp-for="GeneralDetail.Email" class="formInput" type="email" placeholder="e.g., user@example.com" />
            </div>

            <div class="buttonContainer" style="justify-content: flex-end;">
                <button type="submit" class="formButton submitButton">Next: Review Details</button>
            </div>

        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}