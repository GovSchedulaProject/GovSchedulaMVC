@model GovSchedulaWeb.Models.PassportApplicationViewModel
@{
    ViewData["Title"] = "New Passport Application";
    
}

<div class="hero">
    <h1 class="heroTitle">Passport Application</h1>
    <p class="heroSubtitle">
        Fill in the forms with the exact details on your birth certificate
    </p>
    <button type="button" onclick="window.history.back();" class="backButton">
        <i class="fa-solid fa-arrow-left"></i> Back
    </button>
</div>

<div class="formSection">
    <form class="formContainer" asp-action="Create" asp-controller="Passport" method="post">
        @Html.AntiForgeryToken() <div class="formGrid">

            <h2 class="formSubtitle">Personal Details</h2>

            <div>
                <label asp-for="FirstName" class="formLabel"></label>
                <input asp-for="FirstName" class="formInput" />
                <span asp-validation-for="FirstName" class="text-danger"></span> </div>

            <div>
                <label asp-for="LastName" class="formLabel"></label>
                <input asp-for="LastName" class="formInput" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="OtherNames" class="formLabel"></label>
                <input asp-for="OtherNames" class="formInput" />
                <span asp-validation-for="OtherNames" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Gender" class="formLabel"></label>
                <select asp-for="Gender" class="formSelect">
                    <option value="">Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="DateOfBirth" class="formLabel"></label>
                <div class="dateInputContainer">
                    <input asp-for="DateOfBirth" class="formInput" placeholder="MM/DD/YYYY" type="text" />
                    <i class="fa-regular fa-calendar-alt dateIcon"></i>
                </div>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="PlaceOfBirth" class="formLabel"></label>
                <input asp-for="PlaceOfBirth" class="formInput" />
                <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
            </div>

            <h2 class="formSubtitle">Biographical & Contact Details</h2>

            <div>
                <label asp-for="Profession" class="formLabel"></label>
                <input asp-for="Profession" class="formInput" />
                <span asp-validation-for="Profession" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="MaritalStatus" class="formLabel"></label>
                <select asp-for="MaritalStatus" class="formSelect">
                    <option value="">Select Status</option>
                    <option>Single</option>
                    <option>Married</option>
                    <option>Divorced</option>
                    <option>Widowed</option>
                </select>
                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Height" class="formLabel"></label>
                <input asp-for="Height" class="formInput" placeholder="e.g., 5ft 9in or 1.75m" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="PhoneNumber" class="formLabel"></label>
                <input asp-for="PhoneNumber" class="formInput" placeholder="+233 XX XXX XXXX" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="EmailAddress" class="formLabel"></label>
                <input asp-for="EmailAddress" class="formInput" type="email" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="colSpan2">
                <label asp-for="ResidentialAddress" class="formLabel"></label>
                <textarea asp-for="ResidentialAddress" class="formTextarea" rows="3"></textarea>
                <span asp-validation-for="ResidentialAddress" class="text-danger"></span>
            </div>

            <h2 class="formSubtitle">Parental Information</h2>

            <div>
                <label asp-for="FatherName" class="formLabel"></label>
                <input asp-for="FatherName" class="formInput" />
                <span asp-validation-for="FatherName" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="MotherName" class="formLabel"></label>
                <input asp-for="MotherName" class="formInput" />
                <span asp-validation-for="MotherName" class="text-danger"></span>
            </div>

            <h2 class="formSubtitle">Emergency Contact</h2>

            <div>
                <label asp-for="EmergencyName" class="formLabel"></label>
                <input asp-for="EmergencyName" class="formInput" />
                <span asp-validation-for="EmergencyName" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="EmergencyPhone" class="formLabel"></label>
                <input asp-for="EmergencyPhone" class="formInput" placeholder="+233 XX XXX XXXX" />
                <span asp-validation-for="EmergencyPhone" class="text-danger"></span>
            </div>


            <div class="buttonContainer">
                <a asp-action="Index" asp-controller="Home" class="formButton cancelButton">Cancel</a>
                <button type="submit" class="formButton submitButton">
                    Next: Review Details
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}