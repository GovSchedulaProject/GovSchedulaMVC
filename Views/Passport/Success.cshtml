@{
    ViewData["Title"] = "Application Successful";
}

<div class="success-container">
    <div class="success-card">
        <div class="success-icon">
            <i class="fa-solid fa-circle-check"></i>
        </div>

        <h1 class="success-title">Application Submitted Successfully!</h1>

        <p class="success-message">
            @TempData["SuccessMessage"]
        </p>

        <div class="success-info">
            <p>Your passport application has been received and is being processed.</p>
            <p>You will receive a confirmation email with your application reference number shortly.</p>
            <p style="font: 30px">NOTE:</p>
            <p>"philip@traveltide.uk" and "GovSchedula Booking Appointment" are all official Emails from GovSchedula</p>
        </div>

        <div class="success-actions">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                <i class="fa-solid fa-home"></i> Go to Home
            </a>
            <a asp-action="Index" asp-controller="Booking" class="btn btn-secondary">
                <i class="fa-solid fa-calendar"></i> View Bookings
            </a>
        </div>

        <div class="next-steps">
            <h3>Next Steps:</h3>
            <ol>
                <li>Check your email for confirmation</li>
                <li>Wait for approval notification</li>
                <li>Visit the passport office on your scheduled date</li>
                <li>Bring required documents and payment</li>
            </ol>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .success-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 70vh;
            padding: 20px;
        }

        .success-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            padding: 50px;
            max-width: 600px;
            text-align: center;
        }

        .success-icon {
            font-size: 80px;
            color: #28a745;
            margin-bottom: 20px;
            animation: scaleIn 0.5s ease-out;
        }

        @@keyframes scaleIn {
            from {
                transform: scale(0);
            }

            to {
                transform: scale(1);
            }
        }

        .success-title {
            color: #28a745;
            font-size: 32px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .success-message {
            font-size: 18px;
            color: #333;
            margin-bottom: 30px;
            padding: 15px;
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            border-radius: 8px;
        }

        .success-info {
            text-align: left;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }

            .success-info p {
                margin-bottom: 10px;
                color: #555;
                line-height: 1.6;
            }

        .success-actions {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 30px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: 2px solid #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
            }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: 2px solid #6c757d;
        }

            .btn-secondary:hover {
                background-color: #545b62;
                border-color: #545b62;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(108, 117, 125, 0.3);
            }

        .next-steps {
            text-align: left;
            background-color: #fff3cd;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #ffc107;
        }

            .next-steps h3 {
                color: #856404;
                margin-bottom: 15px;
                font-size: 20px;
            }

            .next-steps ol {
                margin-left: 20px;
                color: #856404;
            }

            .next-steps li {
                margin-bottom: 10px;
                line-height: 1.6;
            }

        @@media (max-width: 768px) {
            .success-card {
                padding: 30px 20px;
            }

            .success-title {
                font-size: 24px;
            }

            .success-icon {
                font-size: 60px;
            }

            .success-actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}