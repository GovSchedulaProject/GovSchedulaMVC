@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    
    <script>
        // Initialize Swiper (adjust settings as needed)
        var swiper = new Swiper('.latest-updates-slider', {
            loop: true,
            slidesPerView: 1,
            spaceBetween: 20,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            breakpoints: {
                768: { slidesPerView: 2, spaceBetween: 30 },
                1024: { slidesPerView: 3, spaceBetween: 30 }
            }
        });

        // --- MODAL LOGIC ---
        const modal = document.getElementById('updateModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalBody = document.getElementById('modalBody');
        const closeButton = modal.querySelector('.modal-close-button');
        const readMoreLinks = document.querySelectorAll('.read-more-link');

        readMoreLinks.forEach(link => {
            link.addEventListener('click', function(event) {
                event.preventDefault(); 
                const targetId = this.getAttribute('data-modal-target');
                const fullContentElement = document.getElementById(targetId);

                if (fullContentElement) {
                    const contentClone = fullContentElement.cloneNode(true);
                    contentClone.style.display = 'block'; 
                    modalTitle.innerText = contentClone.querySelector('h2')?.innerText || 'Update Details';
                    modalBody.innerHTML = ''; 
                    const titleElement = contentClone.querySelector('h2');
                    if (titleElement) contentClone.removeChild(titleElement);
                    modalBody.appendChild(contentClone); 
                    modal.style.display = 'block'; 
                }
            });
        });

        function closeModal() {
            modal.style.display = 'none';
            modalBody.innerHTML = ''; 
        }

        closeButton.addEventListener('click', closeModal);
        modal.addEventListener('click', function(event) {
            if (event.target === modal) closeModal();
        });
    </script>
}