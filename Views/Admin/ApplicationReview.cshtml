@model GovSchedulaWeb.Models.ViewModels.ApplicationReviewViewModel
@{
    ViewData["Title"] = "Application Review";
}
@section Styles {
    <style>
        .table { width: 100%; border-collapse: collapse; margin-top: 1.5rem; }
        .table th, .table td { padding: 0.75rem 1rem; text-align: left; border-bottom: 1px solid #e5e7eb; }
        .table th { background-color: #f9fafb; font-weight: 600; }
        .btn-review { background-color: #003366; color: white; padding: 0.5rem 1rem; border-radius: 0.375rem; text-decoration: none; }
    </style>
}

<div class="container" style="max-width: 1024px; margin-left: auto; margin-right: auto; padding: 2rem 1rem;">
    <h1 class="heroTitle" style="font-size: 2.25rem; color: #111827;">Application Review</h1>
    <p class="heroSubtitle" style="font-size: 1.125rem; color: #4b5563; margin-top: 0.5rem;">Review and approve new applications.</p>

    <h2 style="font-size: 1.5rem; font-weight: 600; margin-top: 2rem;">Pending Applications</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Applicant Name</th>
                <th>Service</th>
                <th>Submitted On</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PendingApplications)
            {
                <tr>
                    <td>@item.ApplicantName</td>
                    <td>@item.ServiceName</td>
                    <td>@item.SubmittedOn.ToString("dd/MM/yyyy h:mm tt")</td>
                    <td><span style="background-color: #fef3c7; color: #92400e; padding: 0.25rem 0.5rem; border-radius: 99px;">@item.Status</span></td>
                    <td>
                        <a asp-action="ReviewDetails" asp-controller="Admin" asp-route-id="@item.ApplicationId" class="btn-review">Review</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    </div>