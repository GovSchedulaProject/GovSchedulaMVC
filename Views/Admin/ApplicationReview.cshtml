@using GovSchedulaWeb.Models.Data.ViewModels
@using GovSchedulaWeb.Models.ViewModels

@model AdminApplicationsViewModel
@{
    ViewData["Title"] = "Application Review";
}

@section Styles {
    <style>
        body {
            background-color: #f9fafb;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        }

        h1 {
            font-size: 2rem;
            font-weight: 700;
            color: #111827;
            margin-bottom: 0.5rem;
        }

        p.heroSubtitle {
            font-size: 1.1rem;
            color: #6b7280;
            margin-bottom: 1.5rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            border-radius: 10px;
            overflow: hidden;
        }

        thead {
            background-color: #f3f4f6;
        }

        th, td {
            padding: 1rem 1.25rem;
            text-align: left;
        }

        th {
            font-weight: 600;
            color: #374151;
            text-transform: uppercase;
            font-size: 0.85rem;
            border-bottom: 2px solid #e5e7eb;
        }

        tr {
            transition: background 0.2s ease;
        }

            tr:hover {
                background-color: #f9fafb;
            }

        td {
            font-size: 0.95rem;
            color: #111827;
            border-bottom: 1px solid #e5e7eb;
            white-space: nowrap; /* keeps first/last name on one line */
        }

        /* Status badges */
        .badge {
            display: inline-block;
            padding: 0.35rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .badge-pending {
            background-color: #fef3c7;
            color: #92400e;
        }

        .badge-approved {
            background-color: #d1fae5;
            color: #065f46;
        }

        .badge-rejected {
            background-color: #fee2e2;
            color: #991b1b;
        }

        /* Review button */
        .btn-review {
            background-color: #003366;
            color: #fff;
            padding: 0.5rem 1.25rem;
            border-radius: 8px;
            font-weight: 500;
            text-decoration: none;
            transition: background-color 0.2s ease, transform 0.2s ease;
        }

            .btn-review:hover {
                background-color: #004b99;
                transform: translateY(-1px);
            }
    </style>
}

<div class="container">
    <h1>Application Review</h1>
    <p class="heroSubtitle">Review and approve new applications.</p>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Status</th>
                <th style="text-align:center;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Applications)
            {
                var statusClass = item.ApprovalStatus?.Approval?.ToLower() switch
                {
                    "approved" => "badge-approved",
                    "rejected" => "badge-rejected",
                    _ => "badge-pending"
                };

                <tr>
                    <td>@($"{item.GeneralDetails.FirstName} {item.GeneralDetails.LastName}")</td>
                    <td>@item.GeneralDetails.Email</td>
                    <td>
                        <span class="badge @statusClass">
                            @(item.ApprovalStatus?.Approval ?? "Unoticed")
                        </span>
                    </td>
                    <td style="text-align:center;">
                        <a asp-action="ReviewDetails"
                           asp-route-id="@item.MainDepartmentId"
                           class="btn-review">
                            Review
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
